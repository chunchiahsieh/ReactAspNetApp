{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "User",
    "properties": {
        "Name": {
            "type": "string"
        },
        "Email": {
            "type": "string",
            "format": "email"
        },
        "Password": {
            "type": "string",
            "minLength": 8
        },
        "Avatar": {
            "type": "string"
        }
    },
    "required": ["Name"],
    "additionalProperties": false
}